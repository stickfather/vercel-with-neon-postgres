# Required database connection string used by Neon client
DATABASE_URL="postgres://username:password@host:port/database"

# Shared secret that authorizes automated session maintenance jobs
SESSION_MAINTENANCE_TOKEN="replace-with-session-maintenance-token"

# Optional override for the PIN session signing secret
PIN_SESSION_SECRET="replace-with-pin-session-secret"

# Offline mode: Plaintext PINs for offline caching (must match database PINs)
# WARNING: These are stored in PLAINTEXT for offline-first functionality
# Set these to match the actual PINs hashed in your database
OFFLINE_STAFF_PIN="1234"
OFFLINE_MANAGER_PIN="5678"
